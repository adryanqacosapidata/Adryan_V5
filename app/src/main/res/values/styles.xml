<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.Base.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="FullscreenTheme" parent="android:Theme.NoTitleBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">@style/ButtonBar</item>
        <item name="metaButtonBarButtonStyle">@style/ButtonBarButton</item>
    </style>

    <style name="ButtonBar">
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:background">@android:drawable/bottom_bar</item>
    </style>

    <style name="ButtonBarButton" />
    
    <style name="botones">
        <item name="android:gravity">center</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">@color/acero</item>
    </style>

    <style name="menuButton">
        <item name="android:gravity">center</item>
        <item name="android:padding">5dp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">@color/acero</item>
        <item name="android:layout_margin">2dp</item>
    </style>

    <style name="descriptedText">
        <item name="android:color">#3e3e3e</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="lblShow">
        <item name="android:padding">4dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:background">#ffffff</item>
        <item name="android:textColor">#A4A4A4</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="txtEditar">
        <item name="android:padding">4dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:background">#ffffff</item>
        <item name="android:textColor">#3e3e3e</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="cbMostrar">
        <item name="android:layout_margin">5dp</item>
        <item name="android:background">#ffffff</item>
        <item name="android:textColor">#A4A4A4</item>
        <item name="android:textSize">18sp</item>
    </style>

</resources>
